<h4>Assign User to a task:</h4>

<%= form_tag({:controller => 'tasks', :action => 'assign_task'}, method: :put) do %>
<% for task in @tasks %>
  <p>
    <%= check_box_tag 'task[]', task.id, @user.tasks.include?(task) %>
    <%= task.id %>: <%= task.name %>
  </p>
<% end %>

  <div class="actions">
    <%= submit_tag "Update" %>
  </div>
<% end %>